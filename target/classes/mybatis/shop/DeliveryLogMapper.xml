<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zscat.shop.dao.DeliveryLogDao">

	<select id="get" resultType="com.zscat.shop.domain.DeliveryLogDO">
		select `id`,`addTime`,`deleteStatus`,`begin_time`,`end_time`,`gold`,`store_id` from wemall_delivery_log where id = #{value}
	</select>

	<select id="list" resultType="com.zscat.shop.domain.DeliveryLogDO">
		select `id`,`addTime`,`deleteStatus`,`begin_time`,`end_time`,`gold`,`store_id` from wemall_delivery_log
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="addtime != null and addtime != ''"> and addTime = #{addtime} </if>
		  		  <if test="deletestatus != null and deletestatus != ''"> and deleteStatus = #{deletestatus} </if>
		  		  <if test="beginTime != null and beginTime != ''"> and begin_time = #{beginTime} </if>
		  		  <if test="endTime != null and endTime != ''"> and end_time = #{endTime} </if>
		  		  <if test="gold != null and gold != ''"> and gold = #{gold} </if>
		  		  <if test="storeId != null and storeId != ''"> and store_id = #{storeId} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>

        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from wemall_delivery_log
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="addtime != null and addtime != ''"> and addTime = #{addtime} </if>
		  		  <if test="deletestatus != null and deletestatus != ''"> and deleteStatus = #{deletestatus} </if>
		  		  <if test="beginTime != null and beginTime != ''"> and begin_time = #{beginTime} </if>
		  		  <if test="endTime != null and endTime != ''"> and end_time = #{endTime} </if>
		  		  <if test="gold != null and gold != ''"> and gold = #{gold} </if>
		  		  <if test="storeId != null and storeId != ''"> and store_id = #{storeId} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.zscat.shop.domain.DeliveryLogDO" useGeneratedKeys="true" keyProperty="id">
		insert into wemall_delivery_log
		(
			`addTime`, 
			`deleteStatus`, 
			`begin_time`, 
			`end_time`, 
			`gold`, 
			`store_id`
		)
		values
		(
			#{addtime}, 
			#{deletestatus}, 
			#{beginTime}, 
			#{endTime}, 
			#{gold}, 
			#{storeId}
		)
	</insert>
	 
	<update id="update" parameterType="com.zscat.shop.domain.DeliveryLogDO">
		update wemall_delivery_log 
		<set>
			<if test="addtime != null">`addTime` = #{addtime}, </if>
			<if test="deletestatus != null">`deleteStatus` = #{deletestatus}, </if>
			<if test="beginTime != null">`begin_time` = #{beginTime}, </if>
			<if test="endTime != null">`end_time` = #{endTime}, </if>
			<if test="gold != null">`gold` = #{gold}, </if>
			<if test="storeId != null">`store_id` = #{storeId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from wemall_delivery_log where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from wemall_delivery_log where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>